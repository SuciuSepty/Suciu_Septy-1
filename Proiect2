import hashlib
import itertools
import string

target_hash = "0e000d61c1735636f56154f30046be93b3d71f1abbac3cd9e3f80093fdb357ad"

lowercase = string.ascii_lowercase
uppercase = string.ascii_uppercase
digits = string.digits
specials = "!@#$"

apeluri_recursive = 0

def get_hash(password):
    return hashlib.sha256(password.encode()).hexdigest()

def generare_candidate():
    global apeluri_recursive
    for l1 in lowercase:
        for l2 in lowercase:
            for l3 in lowercase:
                for u in uppercase:
                    for d in digits:
                        for s in specials:
                            apeluri_recursive += 1
                            caractere = [l1, l2, l3, u, d, s]
                            for perm in itertools.permutations(caractere):
                                parola = "".join(perm)
                                if get_hash(parola) == target_hash:
                                    print(f"Parola găsită: {parola}")
                                    print(f"Număr apeluri recursive: {apeluri_recursive}")
                                    return True
    return False

if not generare_candidate():
    print("Parola nu a fost găsită.")
